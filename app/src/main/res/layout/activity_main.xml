<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:liftOnScroll="false">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            app:title="@string/app_name"
            android:id="@+id/toolbar">

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:paddingBottom="64dp"
        android:clipToPadding="false"
        android:id="@+id/editorScroll">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:gravity="top"
            android:background="@null"
            android:padding="16dp"
            android:inputType="textMultiLine"
            android:id="@+id/text"
            android:overScrollMode="never" />

    </androidx.core.widget.NestedScrollView>

    <HorizontalScrollView
        android:id="@+id/tools"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:background="?attr/colorSurface"
        android:paddingHorizontal="12dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/undo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_action_undo"
                android:tooltipText="@string/toast_undo"
                android:contentDescription="@string/toast_undo"
                style="@style/Widget.Material3Expressive.Button.IconButton.Tonal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/redo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_action_redo"
                android:tooltipText="@string/toast_redo"
                android:contentDescription="@string/toast_redo"
                style="@style/Widget.Material3Expressive.Button.IconButton.Tonal" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bold"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_format_bold"
                android:tooltipText="@string/toast_bold"
                android:contentDescription="@string/toast_bold"
                style="@style/Widget.Material3Expressive.Button.IconButton.Tonal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/italic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_format_italic"
                android:tooltipText="@string/toast_italic"
                android:contentDescription="@string/toast_italic"
                style="@style/Widget.Material3Expressive.Button.IconButton.Tonal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/underline"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_format_underline"
                android:tooltipText="@string/toast_underline"
                android:contentDescription="@string/toast_underline"
                style="@style/Widget.Material3Expressive.Button.IconButton.Tonal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/strikethrough"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_format_strikethrough"
                android:tooltipText="@string/toast_strikethrough"
                android:contentDescription="@string/toast_strikethrough"
                style="@style/Widget.Material3Expressive.Button.IconButton.Tonal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bullet"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_format_bullet"
                android:tooltipText="@string/toast_bullet"
                android:contentDescription="@string/toast_bullet"
                style="@style/Widget.Material3Expressive.Button.IconButton.Tonal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/quote"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_format_quote"
                android:tooltipText="@string/toast_quote"
                android:contentDescription="@string/toast_quote"
                style="@style/Widget.Material3Expressive.Button.IconButton.Tonal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/link"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_insert_link"
                android:tooltipText="@string/toast_insert_link"
                android:contentDescription="@string/toast_insert_link"
                style="@style/Widget.Material3Expressive.Button.IconButton.Tonal" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clear"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_format_clear"
                android:tooltipText="@string/toast_clear_format"
                android:contentDescription="@string/toast_clear_format"
                style="@style/Widget.Material3Expressive.Button.IconButton.Tonal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/code"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_code"
                android:tooltipText="@string/toast_toggle_code"
                android:contentDescription="@string/toast_toggle_code"
                style="@style/Widget.Material3Expressive.Button.IconButton.Tonal" />

        </LinearLayout>

    </HorizontalScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
